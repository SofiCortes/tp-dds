{{#partial "contenido"}}

<form name="administrarTerminales" action="/admin/administrarTerminales/" method="GET">

<div class="jumbotron">
  <h2>Administrar Terminales</h2>
  <br>
  <label> Comuna </label>&nbsp&nbsp
  <select name="comuna"> 
  		<option> Todas </option>
		<option> 1 </option>
		<option> 2 </option>
		<option> 3 </option>
		<option> 4 </option>
		<option> 5 </option>
		<option> 6 </option>
		<option> 7 </option>
		<option> 8 </option>
		<option> 9 </option>
		<option> 10 </option>
		<option> 11 </option>
		<option> 12 </option>
		<option> 13 </option>
		<option> 14 </option>
		<option> 15 </option>		
  </select>
  <br>
  <br>
  <input class="btn btn-primary btn-lg" type="submit" value="Buscar">
  <span style="display:inline-block;width:50;"> </span> 
  <input class="btn btn-primary btn-lg" type="reset" value="Limpiar">
  <br>
  <br>
   <table class="table table-stripped">
	<tr>
		<th>Nombre</th>
		<th></th>
	</tr>
	
	{{#each terminales}}
		<tr>
			<td>{{this.nombre}}</td>
			<td><a href="/admin/administrarTerminales/acciones/{{this.id}}"> Acciones</a></td>
			<td><a href="/admin/administrarTerminales/editar/{{this.id}}"> Editar</a></td>
			<td><a href="/admin/administrarTerminales/eliminar/{{this.id}}"> Eliminar</a></td>
		</tr>
	{{/each}}
	</table>  
</div>	

</form>

{{/partial}}

