{{#partial "contenido"}}

<form name="buscarPois" action="/buscarPois" method="GET">

<div class="jumbotron">
  <h2>Buscar Pois</h2>
  <br>
  <label> Descripcion </label> <input type="text" name="descripcion" > </input> <input class="btn btn-primary btn-lg" type="submit" value="Buscar">
  
  <table class="table table-stripped">
	<tr>
		<th>Nombre</th>
		<th>Direccion</th>
		<th></th>
	</tr>
	
	{{#each pois}}
		<tr>
			<td>{{this.nombre}}</td>
			<td>{{this.direccionString}}</td>
			<td><a href="pois/{{this.id}}">Ver detalle</a></td>
		</tr>
	{{/each}}
	</table>
  
</div>	

</form>

{{/partial}}

{{>layout.hbs}}