{{#partial "contenido"}}

<form name="accionesTerminal" action="/admin/administrarTerminales/{{#each terminal}}{{this.emailAdmin}}{{/each}}/acciones/agregar" method="POST">

<div class="jumbotron">
  <h2>Acciones Terminal</h2>
  <br>
  
  <table class="table table-stripped">
	<tr>
		<th> Accion </th>
		<th> Detalle </th>
		<th></th>
	</tr>
	
	{{#each accionesTerminal}}
		<tr>
			<td>{{this.nombreAccion}}</td>
			<td>{{this.detalle}}</td>
			<td> <a href="/admin/administrarTerminales/{{#each terminal}}{{this.emailAdmin}}{{/each}}/acciones/borrar/{{this.id}}">Eliminar</a></td>
		</tr>
	{{/each}}
	</table>
	
	<input class="btn btn-primary btn-lg" type="submit" value="Agregar">
	  
</div>	

</form>

{{/partial}}

{{>layout.hbs}}